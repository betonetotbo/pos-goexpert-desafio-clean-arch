scalar Date

type Order {
  id: ID!
  customer: String!
  date: Date!
  total: Float!
  items: [OrderItem!]!
}

type OrderItem {
  id: ID!
  product: String!
  price: Float!
  quantity: Int!
  total: Float!
}

input NewOrder {
  customer: String!
  items: [NewOrderItem!]!
}

input NewOrderItem {
  product: String!
  price: Float!
  quantity: Int!
}

type Query {
  listOrders: [Order!]!
}

type Mutation {
  createOrder(input: NewOrder!): Order!
}
